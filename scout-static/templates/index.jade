            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') #{title}
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li: a(href='#') Link 
            li: a(href='#') Link     
          ul.nav.navbar-nav.navbar-right
            li: a(href='#') Link
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown') Dropdown 
                span.caret     
              ul.dropdown-menu(role='menu')
